{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "i18n/*": ["./i18n/*"],
      "enums/*": ["./enums/*"],
      "types/*": ["./types/*"],
      "hooks/*": ["./hooks/*"],
      "helpers/*": ["./helpers/*"],
      "services/*": ["./services/*"],
      "constants/*": ["./constants/*"],
      "components/*": ["./components/*"],
      "styles/*": ["./styles/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
